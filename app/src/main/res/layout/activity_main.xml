<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout">


   <RelativeLayout
       android:id="@+id/main"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <androidx.viewpager2.widget.ViewPager2
          android:id="@+id/view_pager"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@id/bottom_menu" />

      <com.google.android.material.bottomnavigation.BottomNavigationView
          android:layout_width="match_parent"
          android:id="@+id/bottom_menu"
          app:menu="@menu/bottom_menu"
          style="@style/BottomNavigationText.Selected"
          app:itemTextColor="@color/text_nav"
          app:itemIconTint="@color/color_first"
          android:splitMotionEvents="false"
          app:labelVisibilityMode="labeled"
          app:itemTextAppearanceInactive="@style/BottomNavigationText"
          app:itemTextAppearanceActive="@style/BottomNavigationText.Selected"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"/>
   </RelativeLayout>
</RelativeLayout>



